{
    "name": "axstrad/browser-sync-bundle",
    "description": "Symfony 2 bundle for use with Browser-Sync",
    "type": "library",
    "keywords": ["symfony bundle", "browser-sync"],
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Dan Kempster",
            "email": "dev@dankempster.co.uk",
            "role": "Developer"
        }
    ],

    "require": {
        "php": ">=5.3.3",
        "symfony/config": "~2.3",
        "symfony/dependency-injection": "~2.3",
        "symfony/event-dispatcher": "~2.3",
        "symfony/http-kernel": "~2.3",
        "symfony/http-foundation": "~2.3"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.1"
    },

    "autoload": {
        "psr-0": {
            "Axstrad\\Bundle\\BrowserSyncBundle": ""
        }
    },

    "minimum-stability": "dev",

    "target-dir": "Axstrad/Bundle/BrowserSyncBundle",

    "archive": {
        "exclude": ["!vendor", "Tests", "phpunit.xml*"]
    }
}
