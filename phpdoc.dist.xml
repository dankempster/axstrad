<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <parser>
        <target>./build/phpdoc</target>
    </parser>
    <transformer>
        <target>./build/api</target>
    </transformer>
    <files>
        <directory>./src</directory>
    </files>
    <logging>
        <level>warn</level>
        <paths>
            <default>./build/logs/phpdoc-{DATE}.log</default>
            <errors>./build/logs/phpdoc-{DATE}.errors.log</errors>
        </paths>
    </logging>
</phpdoc>
